.tile(ng-class="tile.level")
    div(ng-bind="tile.name")
    div(ng-repeat="token in tile.tokens")
        div(ng-class="token")
    h3(ng-bind="tile.relic" ng-if="tile.relic")
    button.btn.btn-xs(ng-click="moveHere()" ng-show="canMoveHere()") Move
    button.btn.btn-xs(ng-click="shoreUp()" ng-show="canShoreUp()") Shore
    button.btn.btn-xs(ng-click="takeRelic()" ng-show="canTakeRelic()") Relic