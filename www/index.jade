html(ng-app="flipadelphia")
head
    link(href="css/style.css" rel="stylesheet")
    link(href="lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")
body(ng-controller="GameController as gc")
    .row
        .col-md-8
            game-board(tiles="gc.tiles")
        .col-md-4
            button(ng-click="gc.startGame(2)") Start
            div Water #[span(ng-bind="gc.waterLevel")]
            div Treasures: #[span(ng-bind="gc.treasureCount().deck")]
            div Discard: #[span(ng-bind="gc.treasureCount().discard")]
            div Tiles: #[span(ng-bind="gc.tileCount().deck")]
            div Discard: #[span(ng-bind="gc.tileCount().discard")]
            div(ng-class="gc.playerClass()")
                | Current Player: 
                span(ng-bind="gc.currentPlayer()")
            div(ng-repeat="p in gc.players")
                h4(ng-bind="p.id")
                span(ng-repeat="card in p.cards track by $index")
                    treasure-card(card="card")

    script(src="lib/angular/angular.js")
    script(src="lib/lodash/dist/lodash.js")
    
    script(src="app.js")
    script(src="modules/board/board.js")
    script(src="modules/tiles/tiles.js")
    script(src="modules/cards/cards.js")
    script(src="modules/gameUtils/gameUtils.js")
    script(src="modules/gameUtils/treasureDeck.js")
    script(src="modules/gameUtils/tileDeck.js")